<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/settings_drawer_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/settings_drawer_b_frame_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/settings_drawer_b_frame_2"
                android:layout_width="60dp"
                android:layout_height="60dp">

            <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/settings_drawer_b_icon_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

        </RelativeLayout>

        <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="textStart"
                android:layout_toEndOf="@+id/settings_drawer_b_frame_2"
                android:layout_marginStart="10dp"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@+id/settings_drawer_b_icon_2"
                android:id="@+id/settings_drawer_b_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"/>

        <ImageView
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/settings_drawer_b_icon_2"
                android:layout_width="57dp"
                android:layout_height="57dp" />

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/settings_drawer_b_frame_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/settings_drawer_b_frame_5"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/settings_drawer_b_icon_4"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/settings_drawer_b_frame_4"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp">

                <ImageView
                        android:layout_marginStart="15dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/settings_drawer_b_icon_3"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                <TextView
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="15dp"
                        android:layout_toEndOf="@+id/settings_drawer_b_icon_3"
                        android:layout_marginStart="10dp"
                        android:id="@+id/settings_drawer_b_text_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"/>

            </RelativeLayout>

        </RelativeLayout>

        <ImageView
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/settings_drawer_b_icon_4"
                android:layout_width="65dp"
                android:layout_height="65dp" />

    </RelativeLayout>

    <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@+id/settings_drawer_b_frame_1"
            android:layout_alignParentStart="true"
            android:id="@+id/settings_drawer_b_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>

    <ListView
            android:layout_alignParentStart="true"
            android:layout_below="@+id/settings_drawer_b_text_2"
            android:layout_marginTop="20dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:id="@+id/settings_drawer_b_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</RelativeLayout>
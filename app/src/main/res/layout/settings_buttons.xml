<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/settings_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/settings_buttons_frame_1"
            android:layout_width="100dp"
            android:layout_height="100dp">

        <TextView
                android:layout_centerInParent="true"
                android:id="@+id/settings_buttons_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25sp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/settings_buttons_frame_1"
            android:id="@+id/settings_buttons_frame_2"
            android:layout_width="75dp"
            android:layout_height="75dp">

        <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/settings_buttons_icon_1"
                android:layout_width="50dp"
                android:layout_height="50dp" />

    </RelativeLayout>

    <TextView
            android:textAlignment="center"
            android:alpha=".5"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/settings_buttons_frame_2"
            android:layout_toStartOf="@+id/settings_buttons_frame_3"
            android:maxLines="1"
            android:layout_alignParentTop="true"
            android:id="@+id/settings_buttons_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"/>

    <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/settings_buttons_frame_3"
            android:layout_width="50dp"
            android:layout_height="50dp">

        <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/settings_buttons_icon_2"
                android:layout_width="25dp"
                android:layout_height="25dp" />

    </RelativeLayout>

    <RelativeLayout
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/settings_buttons_frame_3"
            android:id="@+id/settings_buttons_frame_4"
            android:layout_width="50dp"
            android:layout_height="50dp">

        <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/settings_buttons_icon_3"
                android:layout_width="25dp"
                android:layout_height="25dp" />

    </RelativeLayout>

</RelativeLayout>
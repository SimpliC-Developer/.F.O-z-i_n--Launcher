<RelativeLayout
        android:id="@+id/home_wallpaper_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/home_wallpaper_e_frame"
            android:layout_width="60dp"
            android:layout_height="60dp">

        <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/home_wallpaper_e_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

    </RelativeLayout>

    <TextView
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/home_wallpaper_e_frame"
            android:layout_marginTop="35dp"
            android:layout_alignParentTop="true"
            android:id="@+id/home_wallpaper_e_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>

    <ScrollView
            android:layout_below="@+id/home_wallpaper_e_frame"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:overScrollMode="never"
            android:id="@+id/home_wallpaper_e_scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <TextView
                android:textAlignment="center"
                android:id="@+id/home_wallpaper_e_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>
    </ScrollView>

</RelativeLayout>
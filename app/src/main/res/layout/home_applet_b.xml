<RelativeLayout
        android:id="@+id/home_applet_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:id="@+id/home_applet_b_icon_1"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <TextView
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/home_applet_b_frame_4"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/home_applet_b_icon_1"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/home_applet_b_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

    <RelativeLayout
            android:id="@+id/home_applet_b_frame_4"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:id="@+id/home_applet_b_frame_1"
                android:layout_width="45dp"
                android:layout_height="45dp">

            <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/home_applet_b_icon_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

        </RelativeLayout>

        <RelativeLayout
                android:layout_marginEnd="15dp"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/home_applet_b_frame_1"
                android:id="@+id/home_applet_b_frame_2"
                android:layout_width="45dp"
                android:layout_height="45dp">

            <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/home_applet_b_icon_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

        </RelativeLayout>

        <RelativeLayout
                android:layout_marginEnd="15dp"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/home_applet_b_frame_2"
                android:id="@+id/home_applet_b_frame_3"
                android:layout_width="45dp"
                android:layout_height="45dp">

            <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/home_applet_b_icon_4"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
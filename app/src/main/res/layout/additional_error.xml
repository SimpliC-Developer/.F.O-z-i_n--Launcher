<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/additional_error">

    <TextView
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/additional_error_frame_1"
            android:layout_alignParentStart="true"
            android:maxLines="1"
            android:id="@+id/additional_error_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"/>

    <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:id="@+id/additional_error_frame_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/additional_error_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>

    </RelativeLayout>

    <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/additional_error_frame_1"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:id="@+id/additional_error_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"/>

    <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_below="@+id/additional_error_frame_1"
            android:layout_centerInParent="true"
            android:id="@+id/additional_error_frame_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:id="@+id/additional_error_icon_1"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

    </RelativeLayout>

    <TextView
            android:layout_marginTop="15dp"
            android:layout_below="@+id/additional_error_frame_2"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/additional_error_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>

    <ImageView
            android:layout_marginTop="20dp"
            android:layout_below="@+id/additional_error_text_2"
            android:layout_centerInParent="true"
            android:rotation="45"
            android:id="@+id/additional_error_angle"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    <RelativeLayout
            android:layout_marginTop="-20dp"
            android:layout_below="@+id/additional_error_angle"
            android:layout_alignParentStart="true"
            android:id="@+id/additional_error_frame_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ScrollView
                android:fadingEdgeLength="15dp"
                android:requiresFadingEdge="vertical"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:overScrollMode="never"
                android:id="@+id/additional_notes_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

            <TextView
                    android:textAlignment="center"
                    android:id="@+id/additional_error_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>

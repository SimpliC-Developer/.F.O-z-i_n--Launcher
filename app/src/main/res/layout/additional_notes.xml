<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/additional_notes">

    <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/additional_notes_frame_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/additional_notes_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>

    </RelativeLayout>

    <ImageView
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/additional_notes_square_2"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/additional_notes_frame_1"
            android:id="@+id/additional_notes_square_1"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

    <ImageView
            android:layout_alignParentStart="true"
            android:layout_marginTop="-10dp"
            android:layout_below="@+id/additional_notes_square_1"
            android:id="@+id/additional_notes_square_2"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <ImageView
            android:layout_marginStart="23dp"
            android:layout_alignStart="@+id/additional_notes_square_2"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/additional_notes_square_2"
            android:id="@+id/additional_notes_line_1"
            android:layout_width="5dp"
            android:layout_height="150dp"/>

    <ImageView
            android:layout_marginEnd="20dp"
            android:layout_alignEnd="@+id/additional_notes_frame_2"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/additional_notes_frame_2"
            android:id="@+id/additional_notes_line_2"
            android:layout_width="5dp"
            android:layout_height="150dp"/>

    <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/additional_notes_frame_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:rotation="135"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="-20dp"
                android:layout_alignParentStart="true"
                android:id="@+id/additional_notes_icon_1"
                android:layout_width="50dp"
                android:layout_height="40dp"/>

    </RelativeLayout>

    <TextView
            android:layout_marginBottom="-5dp"
            android:layout_toStartOf="@+id/additional_notes_frame_2"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_alignBottom="@+id/additional_notes_frame_2"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/additional_notes_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

    <ScrollView
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/additional_notes_line_1"
            android:layout_toStartOf="@+id/additional_notes_line_2"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/additional_notes_square_2"
            android:layout_above="@+id/additional_notes_frame_2"
            android:overScrollMode="never"
            android:id="@+id/additional_notes_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <TextView
                android:textAlignment="center"
                android:id="@+id/additional_notes_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>

    </ScrollView>

</RelativeLayout>

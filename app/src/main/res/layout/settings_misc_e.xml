<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/settings_misc_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/settings_misc_e_frame_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/settings_misc_e_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"/>

        <TextView
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/settings_misc_e_text_1"
                android:layout_centerHorizontal="true"
                android:id="@+id/settings_misc_e_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_below="@+id/settings_misc_e_frame_1"
            android:layout_centerInParent="true"
            android:id="@+id/settings_misc_e_frame_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <HorizontalScrollView
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:overScrollMode="never"
                android:id="@+id/settings_misc_e_horizontal_view"
                android:layout_marginStart="5dp"
                android:fadingEdgeLength="15dp"
                android:requiresFadingEdge="horizontal"
                android:layout_marginEnd="5dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">

            <LinearLayout
                    android:id="@+id/settings_misc_e_colors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>

        </HorizontalScrollView>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/settings_misc_e_icon_2"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/settings_misc_e_frame_2"
            android:id="@+id/settings_misc_e_frame_3"
            android:layout_width="60dp"
            android:layout_height="60dp">

        <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/settings_misc_e_icon_1"
                android:layout_width="40dp"
                android:layout_height="40dp" />

    </RelativeLayout>

    <ImageView
            android:layout_marginTop="20dp"
            android:layout_below="@+id/settings_misc_e_frame_2"
            android:layout_alignParentEnd="true"
            android:id="@+id/settings_misc_e_icon_2"
            android:layout_width="60dp"
            android:layout_height="60dp" />

</RelativeLayout>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_applet_c">

    <ImageView
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:rotation="-45"
            android:id="@+id/drawer_applet_c_angle"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    <RelativeLayout
            android:layout_marginStart="-25dp"
            android:layout_toEndOf="@+id/drawer_applet_c_angle"
            android:layout_centerInParent="true"
            android:id="@+id/drawer_applet_c_frame_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_alignParentStart="true"
                android:id="@+id/drawer_applet_c_frame_2"
                android:layout_width="50dp"
                android:layout_height="50dp">

            <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/drawer_applet_c_icon_1"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />

        </RelativeLayout>

        <RelativeLayout
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/drawer_applet_c_frame_2"
                android:id="@+id/drawer_applet_c_frame_3"
                android:layout_width="50dp"
                android:layout_height="50dp">

            <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/drawer_applet_c_icon_2"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />

        </RelativeLayout>

        <RelativeLayout
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/drawer_applet_c_frame_2"
                android:id="@+id/drawer_applet_c_frame_4"
                android:layout_width="50dp"
                android:layout_height="50dp">

            <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/drawer_applet_c_icon_3"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />

        </RelativeLayout>

        <RelativeLayout
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/drawer_applet_c_frame_3"
                android:layout_toEndOf="@+id/drawer_applet_c_frame_4"
                android:id="@+id/drawer_applet_c_frame_5"
                android:layout_width="50dp"
                android:layout_height="50dp">

            <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/drawer_applet_c_icon_4"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginStart="-25dp"
            android:layout_toEndOf="@+id/drawer_applet_c_angle"
            android:layout_centerInParent="true"
            android:id="@+id/drawer_applet_c_frame_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/drawer_applet_c_frame_7"
                android:layout_width="60dp"
                android:layout_height="60dp">

            <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/drawer_applet_c_icon_5"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>

        </RelativeLayout>

        <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/drawer_applet_c_frame_7"
                android:layout_marginTop="35dp"
                android:layout_alignParentTop="true"
                android:id="@+id/drawer_applet_c_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"/>

        <ScrollView
                android:layout_below="@+id/drawer_applet_c_frame_7"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:overScrollMode="never"
                android:id="@+id/drawer_applet_c_scroll_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">

            <TextView
                    android:textAlignment="center"
                    android:id="@+id/drawer_applet_c_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_applet_a">

    <RelativeLayout
            android:layout_alignParentStart="true"
            android:id="@+id/drawer_applet_a_frame_1"
            android:layout_width="70dp"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/drawer_applet_a_icon_1"
                android:layout_width="35dp"
                android:layout_height="35dp" />

        <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_below="@+id/drawer_applet_a_icon_1"
                android:layout_centerHorizontal="true"
                android:id="@+id/drawer_applet_a_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/drawer_applet_a_frame_1"
            android:layout_alignParentStart="true"
            android:id="@+id/drawer_applet_a_frame_2"
            android:layout_width="50dp"
            android:layout_height="50dp">

        <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/drawer_applet_a_icon_2"
                android:layout_width="28dp"
                android:layout_height="28dp" />

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/drawer_applet_a_frame_2"
            android:layout_alignParentStart="true"
            android:id="@+id/drawer_applet_a_frame_3"
            android:layout_width="50dp"
            android:layout_height="50dp">

        <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/drawer_applet_a_icon_3"
                android:layout_width="28dp"
                android:layout_height="28dp" />

    </RelativeLayout>

    <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginStart="7dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/drawer_applet_a_frame_3"
            android:id="@+id/drawer_applet_a_icon_4"
            android:layout_width="55dp"
            android:layout_height="55dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/home_folder_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/home_folder_b_frame_1"
            android:layout_width="110dp"
            android:layout_height="wrap_content">

        <EditText
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_centerInParent="true"
                android:imeOptions="actionDone"
                android:background="@color/transparent"
                android:inputType="text|textVisiblePassword|textNoSuggestions"
                android:textSize="25sp"
                android:id="@+id/home_folder_b_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_centerInParent="true"
                android:id="@+id/home_folder_b_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="25sp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/home_folder_b_frame_1"
            android:id="@+id/home_folder_b_frame_2"
            android:layout_width="55dp"
            android:layout_height="55dp">

        <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/home_folder_b_icon_1"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

    </RelativeLayout>

    <TextView
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toEndOf="@+id/home_folder_b_frame_2"
            android:layout_toStartOf="@+id/home_folder_b_icon_2"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="9dp"
            android:textAlignment="center"
            android:id="@+id/home_folder_b_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"/>

    <ImageView
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:id="@+id/home_folder_b_icon_2"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

</RelativeLayout>
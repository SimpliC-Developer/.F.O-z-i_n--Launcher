<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/home_shortcut_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_alignEnd="@+id/home_shortcut_b_frame_2"
            android:layout_alignParentTop="true"
            android:id="@+id/home_shortcut_b_frame_1"
            android:layout_width="50dp"
            android:layout_height="50dp">

        <TextView
                android:layout_centerInParent="true"
                android:id="@+id/home_shortcut_b_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_below="@+id/home_shortcut_b_frame_1"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:id="@+id/home_shortcut_b_frame_2"
            android:layout_width="270dp"
            android:layout_height="50dp">

        <HorizontalScrollView
                android:overScrollMode="never"
                android:id="@+id/home_shortcut_b_app_view"
                android:layout_marginStart="5dp"
                android:fadingEdgeLength="15dp"
                android:requiresFadingEdge="horizontal"
                android:layout_marginEnd="5dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">

            <LinearLayout
                    android:id="@+id/home_shortcut_b_app_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>

        </HorizontalScrollView>

    </RelativeLayout>

</RelativeLayout>
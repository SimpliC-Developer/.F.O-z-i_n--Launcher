<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/list_type_b"
              android:orientation="horizontal">

    <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/list_type_b_frame_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:id="@+id/list_type_b_frame_2"
                android:layout_width="60dp"
                android:layout_height="60dp">

            <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/list_type_b_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

        </RelativeLayout>

        <TextView
                android:layout_below="@+id/list_type_b_frame_2"
                android:layout_centerInParent="true"
                android:id="@+id/list_type_b_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25sp"/>

        <TextView
                android:layout_below="@+id/list_type_b_text_1"
                android:layout_centerInParent="true"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/list_type_b_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"/>

    </RelativeLayout>

</RelativeLayout>
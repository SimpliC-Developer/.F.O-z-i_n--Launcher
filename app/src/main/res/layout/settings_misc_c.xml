<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/settings_misc_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/settings_misc_c_frame_1"
            android:layout_width="60dp"
            android:layout_height="60dp">

        <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/settings_misc_c_icon_1"
                android:layout_width="30dp"
                android:layout_height="30dp" />

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/settings_misc_c_frame_1"
            android:layout_alignParentTop="true"
            android:id="@+id/settings_misc_c_frame_2"
            android:layout_width="60dp"
            android:layout_height="60dp">

        <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/settings_misc_c_icon_2"
                android:layout_width="30dp"
                android:layout_height="30dp" />

    </RelativeLayout>

    <ImageView
            android:layout_below="@+id/settings_misc_c_frame_1"
            android:layout_alignStart="@+id/settings_misc_c_frame_1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:rotation="45"
            android:id="@+id/settings_misc_c_angle"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    <RelativeLayout
            android:layout_marginTop="-25dp"
            android:layout_below="@+id/settings_misc_c_angle"
            android:layout_alignParentStart="true"
            android:id="@+id/settings_misc_c_frame_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/settings_misc_c_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25sp"/>

        <TextView
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/settings_misc_c_text_1"
                android:layout_centerHorizontal="true"
                android:id="@+id/settings_misc_c_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15sp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/settings_misc_c_frame_3"
            android:id="@+id/settings_misc_c_frame_4"
            android:layout_width="100dp"
            android:layout_height="50dp">

        <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/settings_misc_c_circle"
                android:layout_width="40dp"
                android:layout_height="40dp" />

    </RelativeLayout>

    <ImageView
            android:layout_marginTop="20dp"
            android:layout_below="@+id/settings_misc_c_frame_3"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/settings_misc_c_frame_4"
            android:id="@+id/settings_misc_c_icon_3"
            android:layout_width="60dp"
            android:layout_height="60dp" />

</RelativeLayout>

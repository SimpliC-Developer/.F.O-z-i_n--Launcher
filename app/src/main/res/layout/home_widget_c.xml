<RelativeLayout
        android:id="@+id/home_widget_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <simplified.creative.codes.nest.Tools.Analog
            android:id="@+id/home_widget_clock"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    <TextClock
            android:format12Hour="hh"
            android:layout_toEndOf="@+id/home_widget_clock"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentTop="true"
            android:id="@+id/home_widget_c_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22sp"/>

    <TextClock
            android:format12Hour="a"
            android:layout_toEndOf="@+id/home_widget_clock"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/home_widget_c_text_1"
            android:id="@+id/home_widget_c_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="15sp"/>

</RelativeLayout>

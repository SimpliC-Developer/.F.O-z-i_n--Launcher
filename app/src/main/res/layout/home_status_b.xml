<RelativeLayout
        android:id="@+id/home_status_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/home_status_b_icon"
            android:layout_alignParentTop="true"
            android:layout_width="56dp"
            android:layout_height="40dp"/>

    <TextView
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/home_status_b_icon"
            android:id="@+id/home_status_b_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"/>

    <TextView
            android:layout_marginTop="-3dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/home_status_b_text_1"
            android:id="@+id/home_status_b_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"/>

</RelativeLayout>

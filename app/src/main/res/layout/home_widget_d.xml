<RelativeLayout
        android:id="@+id/home_widget_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/home_widget_d_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"/>

    <TextClock
            android:layout_below="@+id/home_widget_d_text_4"
            android:layout_marginTop="-13dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="20dp"
            android:format12Hour="hh"
            android:id="@+id/home_widget_d_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70sp"/>

    <TextClock
            android:layout_below="@+id/home_widget_d_text_4"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/home_widget_d_text_1"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="20dp"
            android:format12Hour=": mm"
            android:id="@+id/home_widget_d_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"/>

    <TextClock
            android:layout_below="@+id/home_widget_d_text_2"
            android:layout_marginTop="-5dp"
            android:layout_toEndOf="@+id/home_widget_d_text_1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:format12Hour="a"
            android:id="@+id/home_widget_d_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"/>

</RelativeLayout>

<RelativeLayout
        android:id="@+id/settings_edge_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/settings_edge_a_frame"
            android:layout_marginTop="-5dp"
            android:layout_below="@+id/settings_edge_a_frame"
            android:id="@+id/settings_edge_a_line_1"
            android:layout_width="50dp"
            android:layout_height="5dp"/>

    <RelativeLayout
            android:id="@+id/settings_edge_a_frame"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/settings_edge_a_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25sp"/>

    </RelativeLayout>

    <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:rotation="0"
            android:layout_below="@+id/settings_edge_a_frame"
            android:layout_alignParentEnd="true"
            android:id="@+id/settings_edge_a_line_2"
            android:layout_width="5dp"
            android:layout_height="50dp"/>

</RelativeLayout>

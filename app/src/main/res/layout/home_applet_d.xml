<RelativeLayout
        android:id="@+id/home_applet_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/home_applet_d_frame_2"
            android:layout_marginStart="20dp"
            android:id="@+id/home_applet_d_frame_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_centerInParent="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/home_applet_d_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:id="@+id/home_applet_d_frame_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_alignParentStart="true"
                android:id="@+id/home_applet_d_frame_3"
                android:layout_width="45dp"
                android:layout_height="45dp">

            <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/home_applet_d_icon_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

        </RelativeLayout>

        <RelativeLayout
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/home_applet_d_frame_3"
                android:id="@+id/home_applet_d_frame_4"
                android:layout_width="45dp"
                android:layout_height="45dp">

            <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/home_applet_d_icon_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

        </RelativeLayout>

        <RelativeLayout
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/home_applet_d_frame_4"
                android:id="@+id/home_applet_d_frame_5"
                android:layout_width="45dp"
                android:layout_height="45dp">

            <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/home_applet_d_icon_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

        </RelativeLayout>

        <RelativeLayout
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/home_applet_d_frame_4"
                android:id="@+id/home_applet_d_frame_6"
                android:layout_width="45dp"
                android:layout_height="45dp">

            <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/home_applet_d_icon_4"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

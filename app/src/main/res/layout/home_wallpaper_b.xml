<RelativeLayout
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/home_wallpaper_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/home_wallpaper_b_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/home_wallpaper_b_icon"
            android:id="@+id/home_wallpaper_b_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

    <TextView
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/home_wallpaper_b_icon"
            android:id="@+id/home_wallpaper_b_text_2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
</RelativeLayout>
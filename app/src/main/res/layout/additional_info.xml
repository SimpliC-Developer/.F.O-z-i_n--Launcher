<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/additional_info">

    <TextView
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/additional_info_frame_1"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/additional_info_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

    <TextView
            android:textAlignment="center"
            android:layout_below="@+id/additional_info_text_1"
            android:layout_alignStart="@+id/additional_info_frame_1"
            android:layout_alignEnd="@+id/additional_info_frame_1"
            android:id="@+id/additional_info_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>

    <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_below="@+id/additional_info_text_2"
            android:layout_centerInParent="true"
            android:id="@+id/additional_info_frame_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:id="@+id/additional_info_icon_1"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_below="@+id/additional_info_frame_1"
            android:layout_alignEnd="@+id/additional_info_frame_1"
            android:id="@+id/additional_info_frame_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:id="@+id/additional_info_icon_2"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

    </RelativeLayout>

    <TextView
            android:layout_marginBottom="25dp"
            android:layout_above="@+id/additional_info_line"
            android:layout_alignStart="@+id/additional_info_frame_1"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/additional_info_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

    <ImageView
            android:layout_below="@+id/additional_info_frame_2"
            android:layout_alignStart="@+id/additional_info_frame_2"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:rotation="45"
            android:id="@+id/additional_info_angle"
            android:layout_width="22dp"
            android:layout_height="22dp" />

    <ImageView
            android:layout_marginTop="-15dp"
            android:layout_alignEnd="@+id/additional_info_frame_2"
            android:layout_alignStart="@+id/additional_info_frame_1"
            android:layout_below="@+id/additional_info_angle"
            android:id="@+id/additional_info_line"
            android:layout_width="wrap_content"
            android:layout_height="5dp"/>

    <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/additional_info_line"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/additional_info_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>

</RelativeLayout>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/additional_welcome">

    <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/additional_welcome_frame_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:id="@+id/additional_welcome_icon_1"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginStart="-50dp"
            android:layout_marginTop="-40dp"
            android:layout_below="@+id/additional_welcome_frame_1"
            android:layout_alignStart="@+id/additional_welcome_frame_1"
            android:id="@+id/additional_welcome_frame_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:id="@+id/additional_welcome_icon_2"
                android:layout_width="75dp"
                android:layout_height="75dp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_alignEnd="@+id/additional_welcome_frame_4"
            android:layout_below="@+id/additional_welcome_frame_1"
            android:id="@+id/additional_welcome_frame_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:rotation="135"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="-20dp"
                android:layout_alignParentStart="true"
                android:id="@+id/additional_welcome_icon_3"
                android:layout_width="50dp"
                android:layout_height="40dp"/>

    </RelativeLayout>

    <TextView
            android:layout_marginBottom="-5dp"
            android:layout_toStartOf="@+id/additional_welcome_frame_3"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_alignBottom="@+id/additional_welcome_frame_3"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/additional_welcome_text_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

    <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_below="@+id/additional_welcome_frame_3"
            android:layout_centerHorizontal="true"
            android:id="@+id/additional_welcome_frame_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/additional_welcome_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>

        <TextView
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/additional_welcome_text_1"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/additional_welcome_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>

        <TextView
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/additional_welcome_text_2"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/additional_welcome_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>

        <TextView
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/additional_welcome_text_3"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/additional_welcome_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>

    </RelativeLayout>

    <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/additional_welcome_frame_4"
            android:layout_alignStart="@+id/additional_welcome_frame_4"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/additional_welcome_text_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>

    <TextView
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/additional_welcome_text_7"
            android:layout_marginBottom="3dp"
            android:maxLines="1"
            android:id="@+id/additional_welcome_text_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

    <TextView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/additional_welcome_text_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>

</RelativeLayout>
